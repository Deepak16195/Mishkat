<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/linner2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="5">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="left|center"
                android:layout_weight=".5"
                android:src="@drawable/backicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center"
                android:layout_weight=".5"
                android:src="@drawable/pyramid" />


        </LinearLayout>


        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="112dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.266"
                app:srcCompat="@drawable/logo" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="347dp"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:weightSum="3"
                app:layout_constraintBottom_toTopOf="@+id/Bt_myAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.81">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/accountbg" />

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="287dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/edittext_style"
                        android:fontFamily="@font/agencyr"
                        android:gravity="left|center"
                        android:hint="John"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:paddingStart="30dp"
                        android:paddingLeft="30dp"
                        android:textColor="@color/textjont"
                        android:textColorHint="@color/textjont"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/accountbg" />

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="287dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/edittext_style"
                        android:fontFamily="@font/agencyr"
                        android:gravity="left|center"
                        android:hint="Deo"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:paddingStart="30dp"
                        android:paddingLeft="30dp"
                        android:textColor="@color/textjont"
                        android:textColorHint="@color/textjont"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/emailbg" />

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="287dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/edittext_style"
                        android:fontFamily="@font/agencyr"
                        android:gravity="left|center"
                        android:hint="Deepak12@host.com"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingStart="30dp"
                        android:paddingLeft="30dp"
                        android:textColor="@color/textjont"
                        android:textColorHint="@color/textjont"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/agencyb"
                    android:paddingStart="90dp"
                    android:paddingLeft="90dp"
                    android:text="OR"
                    android:textColor="@color/textjont"
                    android:textColorHint="@color/textjont"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/mobilebg" />

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="287dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/edittext_style"
                        android:fontFamily="@font/agencyr"
                        android:gravity="left|center"
                        android:hint="Mobile Number"
                        android:inputType="number"
                        android:maxLines="1"
                        android:paddingStart="30dp"
                        android:paddingLeft="30dp"
                        android:textColor="@color/textjont"
                        android:textColorHint="@color/textjont"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/mobile" />

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="287dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/edittext_style"
                        android:fontFamily="@font/agencyr"
                        android:gravity="left|center"
                        android:hint="91827164"
                        android:maxLines="1"
                        android:paddingStart="30dp"
                        android:paddingLeft="30dp"
                        android:textColor="@color/textjont"
                        android:textColorHint="@color/textjont"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:paddingTop="15dp"
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/check"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="57dp"
                        android:background="@drawable/checkbox_layout"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:padding="2dp"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/agencyr"
                        android:text="Accept.. "
                        android:textColor="@color/textjont"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/agencyb"
                        android:text=" Terms  &amp; Conditions "
                        android:textAllCaps="false"
                        android:textColor="@color/textjont"
                        android:textSize="16dp"
                        android:textStyle="bold" />


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/agencyb"
                        android:gravity="left|center"
                        android:text="@string/Loginpage"
                        android:textColor="@color/textjont"
                        android:textColorHint="@color/textjont"
                        android:textSize="16dp"
                        android:visibility="gone" />


                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/Edit_profile"
                android:layout_width="299dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="92dp"
                android:background="@drawable/edittext_style"
                android:fontFamily="@font/agencyb"
                android:text="Edit profile"
                android:textAllCaps="true"
                android:textColor="@color/textjont"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:id="@+id/Bt_myAddress"
                android:layout_width="299dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/buttonbg"
                android:fontFamily="@font/agencyb"
                android:text="My Addresses"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

</RelativeLayout>