<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    tools:context=".Add_AddressActivity">

    <LinearLayout
        android:id="@+id/linner2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="5">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="left|center"
                android:layout_weight=".5"
                android:src="@drawable/backicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center"
                android:layout_weight=".5"
                android:src="@drawable/pyramid" />


        </LinearLayout>


        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="112dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.266"
                app:srcCompat="@drawable/logo" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="347dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:weightSum="3"
                app:layout_constraintBottom_toTopOf="@+id/Bt_AddnewAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.81">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">


                        <android.support.design.widget.TextInputEditText
                            android:layout_width="287dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_style"
                            android:fontFamily="@font/agencyr"
                            android:gravity="left|center"
                            android:hint="Address Name*"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:paddingStart="30dp"
                            android:paddingLeft="30dp"
                            android:textColor="@color/textjont"
                            android:textColorHint="@color/textjont"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_style"
                            android:fontFamily="@font/agencyr"
                            android:gravity="left|center"
                            android:hint="Area*"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:paddingStart="30dp"
                            android:paddingLeft="30dp"
                            android:textColor="@color/textjont"
                            android:textColorHint="@color/textjont"
                            android:textStyle="bold" />


                        <Spinner
                            android:id="@+id/sp_country"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/spinner_style"
                            android:ellipsize="end"
                            android:overlapAnchor="false"
                            android:paddingStart="30dp"
                            android:paddingLeft="30dp"
                            android:popupBackground="@drawable/edittext_stylewithoutlinebottom"
                            android:popupElevation="0dp"
                            android:scrollbars="none"
                            android:singleLine="true" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="287dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_style"
                            android:fontFamily="@font/agencyr"
                            android:gravity="left|center"
                            android:hint="Block*"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:paddingStart="30dp"
                            android:paddingLeft="30dp"
                            android:textColor="@color/textjont"
                            android:textColorHint="@color/textjont"
                            android:textStyle="bold" />

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="287dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_style"
                            android:fontFamily="@font/agencyr"
                            android:gravity="left|center"
                            android:hint="Street*"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:paddingStart="30dp"
                            android:paddingLeft="30dp"
                            android:textColor="@color/textjont"
                            android:textColorHint="@color/textjont"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="287dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_style"
                            android:fontFamily="@font/agencyr"
                            android:gravity="left|center"
                            android:hint="Avenue(optional)"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:paddingStart="30dp"
                            android:paddingLeft="30dp"
                            android:textColor="@color/textjont"
                            android:textColorHint="@color/textjont"
                            android:textStyle="bold" />

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="287dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_style"
                            android:fontFamily="@font/agencyr"
                            android:gravity="left|center"
                            android:hint="Building*"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:paddingStart="30dp"
                            android:paddingLeft="30dp"
                            android:textColor="@color/textjont"
                            android:textColorHint="@color/textjont"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="287dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_style"
                            android:fontFamily="@font/agencyr"
                            android:gravity="left|center"
                            android:hint="Floor*"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:paddingStart="30dp"
                            android:paddingLeft="30dp"
                            android:textColor="@color/textjont"
                            android:textColorHint="@color/textjont"
                            android:textStyle="bold" />

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="287dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_style"
                            android:fontFamily="@font/agencyr"
                            android:gravity="left|center"
                            android:hint="Apartment No*"
                            android:inputType="textCapSentences"
                            android:maxLines="1"
                            android:paddingStart="30dp"
                            android:paddingLeft="30dp"
                            android:textColor="@color/textjont"
                            android:textColorHint="@color/textjont"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">


                        <EditText
                            android:id="@+id/notes_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="2"
                            android:fontFamily="@font/agencyr"
                            android:background="@drawable/edittext_style"
                            android:gravity="top|left"
                            android:hint="Additional Directions(optional)"
                            android:inputType="textCapSentences|textMultiLine|textAutoCorrect"
                            android:lines="3"
                            android:textStyle="bold"
                            android:textColor="@color/textjont"
                            android:maxLength="500"
                            android:padding="5dp"
                            android:paddingStart="30dp"
                            android:paddingLeft="30dp"
                            android:textColorHint="@color/textjont" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/Bt_AddnewAddress"
                android:layout_width="299dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/buttonbg"
                android:fontFamily="@font/agencyb"
                android:text="Add"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

</RelativeLayout>